{
  "manifest_version": 2,
  "name": "XDebug WebExt",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "xdebug-webext@makina-corpus.com"
    }
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "cookies",
    "tabs"
  ],
  "icons": {
    "128": "icons/icon.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/icon.svg"
    },
    "browser_style": true,
    "default_popup": "popup.html",
    "default_title": "XDebug"
  }
}
